%form{:action => '/auth/login', :method => 'post', :role => 'form', :class => 'form-horizontal'}
  .form-group
    %label{:for => 'username', :class => 'col-sm-2 control-label'}Username
    .col-sm-5
      %input{:type => 'text', :name => 'user[username]', :id => 'username', :class => 'form-control'}
  .form-group
    %label{:for => 'password', :class => 'col-sm-2 control-label'}Password
    .col-sm-5
      %input{:type => 'password', :name => 'user[password]', :id => 'password', :class => 'form-control'}
  .form-group
    .col-sm-offset-2.col-sm-5
      %input{:type => 'submit', :value => 'Log In', :class => 'btn btn-default'}
