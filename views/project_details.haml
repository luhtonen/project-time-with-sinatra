- if @project && @project.id
  %h2 #{@project.title} details
- else
  %h2 New project

%form{:action => '/projects', :role => 'form', :method => 'POST'}
  .row
    .col-sm-5
      .form-group
        %label{:for => 'title'}Project title
        %input{:type => 'text', :id => 'title', :class => 'form-control', :name => 'project[title]', :value => @project && "#{@project.title}"}
    .col-sm-5
      .form-group
        %label{:for => 'number'}Project number
        %input{:type => 'text', :id => 'number', :class => 'form-control', :name => 'project[number]', :value => @project && "#{@project.number}"}
  .row
    .col-sm-5
      .form-group
        %label{:for => 'location'}Project location
        %input{:type => 'text', :id => 'location', :class => 'form-control', :name => 'project[location]', :value => @project && "#{@project.location}"}
    .col-sm-5
      .form-group
        %label{:for => 'position'}Your position in project
        %input{:type => 'text', :id => 'position', :class => 'form-control', :name => 'project[position]', :value => @project && "#{@project.position}"}
  .row
    .col-sm-5
      .form-group
        %label{:for => 'approver'}Report approver
        %input{:type => 'text', :id => 'approver', :class => 'form-control', :name => 'project[approver]', :value => @project && "#{@project.approver}"}
    .col-sm-5
      .form-group
        %label{:for => 'mandays'}Project man days
        %input{:type => 'number', :id => 'mandays', :class => 'form-control', :name => 'project[mandays]', :value => @project && "#{@project.mandays}"}
  .row
    .col-sm-5
      .form-group
        %label{:for => 'startdate'}Project start date
        %input{:type => 'date', :id => 'startdate', :class => 'form-control', :name => 'project[startdate]', :value => @project && "#{@project.startdate}"}
    .col-sm-5
      .form-group
        %label{:for => 'enddate'}Project end date
        %input{:type => 'date', :id => 'enddate', :class => 'form-control', :name => 'project[enddate]', :value => @project && "#{@project.enddate}"}
  .checkbox
    .col-sm-5
      %label
        %input{:type => 'checkbox', :name => 'project[active]', :value => @project && "#{@project.active}"} Project is active
  .form-group
    .col-sm-5
      %input{:type => 'submit', :value => 'Save', :class => 'btn btn-primary'}
      %a{:href => '/projects', :class => 'btn btn-default'}Cancel